{
    "name": "bcash/filament-money-field",
    "description": "Money field powered by MoneyPHP for Filament 4",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Bcash\\FilamentMoneyField\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bcash\\FilamentMoneyField\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Peter Elmered",
            "email": "peter@elmered.com"
        },
        {
            "name": "Brian Cash",
            "email": "brian@alpine.io"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.2",
        "ext-intl": "*",
        "filament/support": "^4.0",
        "moneyphp/money": "^4.0",
        "illuminate/support": "^11.24 | ^12",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "filament/filament": "^4.0",
        "orchestra/testbench": "^9.0",
        "nunomaduro/collision": "^8.0",
        "laravel/pint": "^1.16",
        "pestphp/pest": "^3.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Bcash\\FilamentMoneyField\\FilamentMoneyFieldServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
